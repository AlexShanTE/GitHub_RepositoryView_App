<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubRepositoryViewApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorLink">@color/secondary</item>
        <item name="colorPrimary">@color/bg</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="Widget.AppTheme.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/accent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.AppTheme.IconAndText" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>


</resources>